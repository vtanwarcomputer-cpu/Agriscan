    <script type="importmap">
      {
        "imports": {
          "@google/genai": "https://esm.sh/@google/genai"
        }
      }
    </script>
    <script type="module">
        import { GoogleGenAI } from '@google/genai';

        // API Configuration
        const API_KEY = 'AIzaSyA70uR7mhGgoq7f4drrPR0Sy_l2MOuuROA';
        const genai = new GoogleGenAI({ apiKey: API_KEY });

        // DOM Elements - Disease Detection
        const dropZone = document.getElementById('drop-zone');
        const imageUpload = document.getElementById('image-upload');
        const uploadPlaceholder = document.getElementById('upload-placeholder');
        const imagePreview = document.getElementById('image-preview');
        const analyzeBtn = document.getElementById('analyze-btn');
        const clearBtn = document.getElementById('clear-btn');
        const analysisResult = document.getElementById('analysis-result');
        const resultText = document.getElementById('result-text');
        const analysisSpinner = document.getElementById('analysis-spinner');

        // DOM Elements - Chat
        const chatHistory = document.getElementById('chat-history');
        const chatInput = document.getElementById('chat-input');
        const sendBtn = document.getElementById('send-btn');

        // State
        let currentImageFile = null;
        let currentImageBase64 = null;
        let chatContext = [];

        // --- Helper Functions ---

        function fileToBase64(file) {
            return new Promise((resolve, reject) => {
                const reader = new FileReader();
                reader.readAsDataURL(file);
                reader.onload = () => resolve(reader.result);
                reader.onerror = error => reject(error);
            });
        }

        function getGenerativePart(base64DataUrl) {
            const parts = base64DataUrl.split(',');
            const mimeType = parts[0].match(/:(.*?);/)[1];
            const base64Data = parts[1];

            return {
                inlineData: {
                    data: base64Data,
                    mimeType: mimeType
                }
            };
        }

        function renderMarkdown(text) {
            return text
                .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
                .replace(/\*(.*?)\*/g, '<em>$1</em>')
                .replace(/\n\n/g, '<br><br>')
                .replace(/\n/g, '<br>');
        }

        // --- Image Upload & Preview Logic ---

        function handleFileSelect(file) {
            if (!file || !file.type.startsWith('image/')) return;

            currentImageFile = file;

            fileToBase64(file).then(base64 => {
                currentImageBase64 = base64;
                imagePreview.src = base64;
                imagePreview.hidden = false;
                uploadPlaceholder.hidden = true;

                analyzeBtn.disabled = false;
                clearBtn.disabled = false;
            });
        }

        dropZone.addEventListener('click', () => imageUpload.click());

        imageUpload.addEventListener('change', (e) => {
            if (e.target.files.length > 0) {
                handleFileSelect(e.target.files[0]);
            }
        });

        ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
            dropZone.addEventListener(eventName, preventDefaults, false);
        });

        function preventDefaults(e) {
            e.preventDefault();
            e.stopPropagation();
        }

        ['dragenter', 'dragover'].forEach(eventName => {
            dropZone.addEventListener(eventName, () => dropZone.classList.add('drag-over'), false);
        });

        ['dragleave', 'drop'].forEach(eventName => {
            dropZone.addEventListener(eventName, () => dropZone.classList.remove('drag-over'), false);
        });

        dropZone.addEventListener('drop', (e) => {
            const dt = e.dataTransfer;
            const files = dt.files;
            if (files.length > 0) {
                handleFileSelect(files[0]);
            }
        });

        clearBtn.addEventListener('click', () => {
            currentImageFile = null;
            currentImageBase64 = null;
            imagePreview.src = '';
            imagePreview.hidden = true;
            uploadPlaceholder.hidden = false;
            analyzeBtn.disabled = true;
            clearBtn.disabled = true;
            analysisResult.hidden = true;
            imageUpload.value = '';
        });

        // --- Plant Analysis Logic ---

        analyzeBtn.addEventListener('click', async () => {
            if (!currentImageBase64) return;

            analyzeBtn.disabled = true;
            analysisResult.hidden = false;
            analysisSpinner.hidden = false;
            resultText.innerHTML = '';

            try {
                const scoreContainer = document.getElementById('health-score-container');
                if (scoreContainer) scoreContainer.hidden = true;

                const imagePart = getGenerativePart(currentImageBase64);
                const prompt = "Act as an expert plant pathologist. Analyze this image. Identify the plant and any potential diseases or health issues visible. Importantly, provide a health score from 0 to 100 enclosed in brackets like exactly this format: [SCORE:85]. Where 100 is perfectly healthy and 0 is completely dead. After the score, give a short, concise response (2-3 sentences) detailing the condition and a recommended action.";

                const response = await genai.models.generateContent({
                    model: 'gemini-2.5-flash',
                    contents: [
                        {
                            role: 'user',
                            parts: [
                                { text: prompt },
                                imagePart
                            ]
                        }
                    ]
                });

                const responseText = response.text;
                let scoreMatch = responseText.match(/\[SCORE:\s*(\d+)\]/i);
                let score = null;
                let cleanText = responseText;

                if (scoreMatch && scoreMatch[1]) {
                    score = parseInt(scoreMatch[1], 10);
                    cleanText = responseText.replace(/\[SCORE:\s*\d+\]/i, '').trim();
                } else {
                    let bracketMatch = responseText.match(/\[(\d+)\]/);
                    if (bracketMatch && bracketMatch[1]) {
                        score = parseInt(bracketMatch[1], 10);
                        cleanText = responseText.replace(/\[\d+\]/, '').trim();
                    }
                }

                analysisSpinner.hidden = true;

                const scoreValueObj = document.getElementById('health-score-value');
                const progressFill = document.getElementById('health-progress-fill');

                if (score !== null && scoreContainer) {
                    scoreContainer.hidden = false;

                    // animate score
                    progressFill.style.width = '0%';
                    setTimeout(() => {
                        progressFill.style.width = `${score}%`;
                    }, 50);

                    const duration = 1000;
                    const steps = 20;
                    const stepTime = duration / steps;
                    let currentStep = 0;

                    const timer = setInterval(() => {
                        currentStep++;
                        const currentVal = Math.round((currentStep / steps) * score);
                        scoreValueObj.textContent = currentVal + '%';

                        if (currentVal < 40) scoreValueObj.style.color = '#f97316';
                        else if (currentVal < 70) scoreValueObj.style.color = '#ffb142';
                        else scoreValueObj.style.color = '#34c870';

                        if (currentStep >= steps) clearInterval(timer);
                    }, stepTime);
                }

                resultText.innerHTML = renderMarkdown(cleanText);

                addMessageToChat('System', 'Image analyzed. You can ask follow-up questions.');

            } catch (error) {
                console.error("Error analyzing image:", error);
                analysisSpinner.hidden = true;
                resultText.innerHTML = `<span class="error-text">Analysis failed. Please try again or check your API key.</span>`;
                analyzeBtn.disabled = false;
            }
        });


        // --- Chat Logic ---

        function addMessageToChat(role, text) {
            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${role === 'user' ? 'user-message' : 'ai-message'}`;

            const bubble = document.createElement('div');
            bubble.className = 'message-bubble glass-bubble';

            if (role === 'loading') {
                bubble.innerHTML = '<div class="loading-spinner chat-spinner"></div>';
                messageDiv.id = 'loading-message';
            } else {
                bubble.innerHTML = renderMarkdown(text);
            }

            messageDiv.appendChild(bubble);
            chatHistory.appendChild(messageDiv);
            chatHistory.scrollTop = chatHistory.scrollHeight;
        }

        function removeLoadingMessage() {
            const loadingMsg = document.getElementById('loading-message');
            if (loadingMsg) {
                loadingMsg.remove();
            }
        }

        async function handleSendMessage() {
            const text = chatInput.value.trim();
            if (!text) return;

            addMessageToChat('user', text);
            chatInput.value = '';

            addMessageToChat('loading', '');

            try {
                let parts = [{ text: text }];

                if (currentImageBase64 && text.toLowerCase().includes('image')) {
                    parts.push(getGenerativePart(currentImageBase64));
                }

                chatContext.push({ role: 'user', parts: parts });

                const response = await genai.models.generateContent({
                    model: 'gemini-2.5-flash',
                    contents: chatContext,
                    config: {
                        systemInstruction: "You are AgriScan, an expert botanist and plant pathologist AI assistant. Be concise and helpful."
                    }
                });

                removeLoadingMessage();

                // Add response to context
                chatContext.push({ role: 'model', parts: [{ text: response.text }] });

                addMessageToChat('ai', response.text);

            } catch (error) {
                console.error("Chat error:", error);
                removeLoadingMessage();
                // If error, pop the last user message from context so they can retry
                chatContext.pop();
                addMessageToChat('ai', `<span class="error-text">Sorry, I encountered an error. Check console and API quotas.</span>`);
            }
        }

        sendBtn.addEventListener('click', handleSendMessage);
        chatInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') handleSendMessage();
        });
    </script>
</body>

</html>
